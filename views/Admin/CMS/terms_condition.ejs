
<%- include('../common/header') %>
<%- include('../common/sidebar') %>


    <!-- BEGIN: Content-->
    <div class="app-content content ">

      <div class="content-wrapper container-xxl p-0">
        <div class="content-body">
          <section id="multiple-column-form">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title"> Terms & Conditions</h4>
              </div>

              <div class="card-body">
                <form action="/Update_aboutus" method="post">
                  <div class="form-group row mb-2">
                    <label class="col-form-label text-md-left col-10 col-md-1 col-lg-1">Title </label>
                    <div class="col-sm-12 col-md-12">
                      <input type="text" name="title" value="<%=data.title%>" class="form-control" disabled>
                    </div>
                  </div>
                  <div class="form-group row mb-2">
                    <label class="col-form-label col-12 col-md-3 col-lg-3">Description</label>
                    <div class="col-sm-12 col-md-12">
                      <textarea class="editor" id="editor" name="description" class="form-control"
                        required> <%=data.description%> </textarea>
                     
                      <input type="hidden" name="id" value="<%=data.id%>"> <br>
                      <br>
                      <!-- <div class="col-12">
                        <div class="col-sm-9 offset-sm-5">
                          <button type="submit"
                            class="btn waves-effect waves-float waves-light">Submit</button>
                        </div>
                      </div> -->
                      <button type="submit" class="btn ">Submit <i
                        class="icon-arrow-right14 position-right"></i></button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
    <div class="sidenav-overlay"></div>
    <div class="drag-target"></div>

    <%- include('../common/footer') %>

    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.0/classic/ckeditor.js"></script>

    <script>
      ClassicEditor
          .create(document.querySelector('#editor'))
          .then(editor => {
              console.log(editor);
          })
          .catch(error => {
              console.error(error);
          });
    </script>
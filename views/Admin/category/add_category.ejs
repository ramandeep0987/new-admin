}

/* Fix floating label behavior for <select> */
.input-group select:focus + .floating-label,
.input-group select:not([value=""]) + .floating-label,
.input-group select:not(:placeholder-shown) + .floating-label {
    top: -8px;
    left: 10px;
    background: white;
    padding: 0 6px;
    font-size: 13px;
    color: #2563eb;
}

  .input-field:focus {
    border-color: #4285f4;
    box-shadow: 0 0 0 3px rgba(66,133,244,0.15);
  }

  .floating-label {
    position: absolute;
    top: 14px;
    left: 14px;
    font-size: 15px;
    color: #6b7280;
    pointer-events: none;
    transition: 0.2s;
  }

  .input-field:focus + .floating-label,
  .input-field:not(:placeholder-shown) + .floating-label {
    top: -8px;

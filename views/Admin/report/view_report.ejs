


<%- include('../common/header') %>
<%- include('../common/sidebar') %>


    <!-- BEGIN: Content-->
    <div class="app-content content ">
      <div class="content-wrapper container-xxl p-0">
        <div class="content-body">
          <section id="multiple-column-form">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title"> Message</h4>
              </div>
              <div class="card-body">
                <form action="/report_list" method="get">
                  <br>
                  <div class="mb-1 row">
                    <div class="col-sm-1">
                      <label class="col-form-label new_lable" for="name">Reported by</label>
                    </div>
                    <div class="col-sm-10">
                      <input type="text" name="" value="<%=repoData.reportBy ? repoData.reportBy.firstname : "User does not exist" %>" class="form-control" disabled>
                    </div>
                  </div>  
                  <div class="mb-1 row">
                    <div class="col-sm-1">
                      <label class="col-form-label new_lable" for="name">Reported</label>
                    </div>
                    <div class="col-sm-10">
                      <input type="text" name="" value="<%=repoData.reportTo ? repoData.reportTo.firstname : "User does not exist" %>" class="form-control" disabled>
                    </div>
                  </div>  
                  <div class="mb-1 row">
                    <div class="col-sm-1">
                      <label class="col-form-label new_lable"> Message</label>
                    </div>
                    <div class="col-sm-10">
                      <input type="text" name="" value="<%=repoData.message%>" class="form-control" disabled>
                    </div>
                  </div>  
                  <div class="col-12">
                    <div class="col-sm-9 offset-sm-5">
                      <button type="submit"
                        class="btn waves-effect waves-float waves-light">Back</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
    <div class="sidenav-overlay"></div>
    <div class="drag-target"></div>

    <%- include('../common/footer') %>

    <script src="https://cdn.ckeditor.com/4.20.2/standard/ckeditor.js"></script>
    <script>
      CKEDITOR.replace('content');
    </script>
    
<%- include('../common/header'); -%>
<%- include('../common/sidebar'); -%>

<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>Review details</h1>
    </div>
    <div class="section-body">
      <form action="/Update_Profile" method="post" enctype="multipart/form-data">
      <div class="row mt-sm-4 justify-content-center">
        <div class="col-12 col-md-12 col-lg-10 offset-lg-0">
              <div class="card">
              <div class="card-body">
                <div class="form-group ">
                  <label class="col-form-label text-md-right col-12 col-md-5 col-lg-3">Employee Name</label>
                  <div class="col-sm-12 col-md-12">
                    <input type="text" name="userId" value="<%=userdata.userId.firstname%>" class="form-control" disabled>
                  </div>
                </div>
                <div class="form-group">
                    <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Worker Name</label>
                    <div class="col-sm-12 col-md-12">
                      <input type="text" name="workerId" value="<%=userdata.workerId.firstname%>" class="form-control" disabled>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Rating</label>
                    <div class="col-sm-12 col-md-12">
                      <input type="text" name="rating" value="<%=userdata.rating%>" class="form-control" disabled>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Comment</label>
                    <div class="col-sm-12 col-md-12">
                      <input type="text" name="comment" value="<%=userdata.comment%>" class="form-control" disabled>
                    </div>
                  </div>
                <div class="form-group">
                  <div class="col-sm-12 col-md-12">
                    <a href="/Review_list" class="btn btn-info">Back</a>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
    </form>
    </div>
  </section>
</div>

<%- include('../common/footer'); -%>

<script>
  imgInp.onchange = evt => {
    const [file] = imgInp.files
    if (file) {
      blah.src = URL.createObjectURL(file)
    }
  }
</script>


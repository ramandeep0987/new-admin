<%- include('../common/header') %>
<%- include('../common/sidebar') %>

    <!-- BEGIN: Content-->
<div class="app-content content ">
  <div class="content-wrapper container-xxl p-0">
    <section id="multiple-column-form">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="card">
            <div class="card-header">
              <h4 class="card-title"> Bank Details</h4>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="mb-1 row">
                  <div class="col-sm-2">
                    <label class="col-form-label new_lable" for="first-name">Account Holder</label>
                  </div>
                  <div class="col-sm-10">
                    <input type="text" id="name" class="form-control" name="bank_name" value="<%=withdrawdetail.workerId ? withdrawdetail.workerId.firstname : "Details not found"%>"
                      disabled>
                  </div>
                </div>
                <div class="mb-1 row">
                  <div class="col-sm-2">
                    <label class="col-form-label new_lable" for="first-name">Bank Name</label>
                  </div>
                  <div class="col-sm-10">
                    <input type="text" id="name" class="form-control" name="name" value="<%=bankdetails ? bankdetails.bank_name : "Details not found"%>"
                      disabled>
                  </div>
                </div>
                <div class="mb-1 row">
                  <div class="col-sm-2">
                    <label class="col-form-label new_lable" for="first-name">Account Number</label>
                  </div>
                  <div class="col-sm-10">
                    <input type="text" id="name" class="form-control" name="name" value="<%=bankdetails ? bankdetails.account_number: "Details not found"%> "
                      disabled>
                  </div>
                </div>
                <!-- <div class="mb-1 row">
                  <div class="col-sm-2">
                    <label class="col-form-label new_lable" for="first-name"> Swift Code</label>
                  </div>
                  <div class="col-sm-10">
                    <input type="text" id="name" class="form-control" name="name" value="<%=bankdetails ? bankdetails.IFSC : "Details not found"%>"
                      disabled>
                  </div>
                </div> -->
                 <div class="mb-1 row">
                  <div class="col-sm-2">
                    <label class="col-form-label new_lable" for="first-name">Request Amount</label>
                  </div>
                  <div class="col-sm-10">
                    <input type="text" id="name" class="form-control" name="name" value=" $ <%=withdrawdetail.amount%>"
                      disabled>
                  </div>
                </div>
                <div class="mb-1 row">
                  <div class="col-sm-2">
                    <label class="col-form-label new_lable" for="first-name">Payment Status</label>
                  </div>
                  <div class="col-sm-10">
                    <input type="text" id="name" class="form-control" name="name" value="<% if (withdrawdetail.payment_status == 1) { %>Pending
                    <% } else if (withdrawdetail.payment_status == 2) { %>Approved
                    <% } else if (withdrawdetail.payment_status == 3) { %>Rejected
                    <% } %>"
                      disabled>
                  </div>
                </div>
                <!-- <div class="mb-1 row">
                  <div class="col-sm-2">
                    <label class="col-form-label new_lable" for="first-name">Description</label>
                  </div>
                  <div class="col-sm-10">
                    <input type="text" id="name" class="form-control" name="description" value="<%=withdrawdetail.description%>"
                      disabled>
                  </div>
                </div> -->
              </div>
            </div>
            <div class="col-12">
              <div class="col-sm-9 offset-sm-5">
                <a href="/Withdraw_list" class="btn float-right" title="Edit Profile"> Back </a>
              </div>
              </div>
          </div>
        
        </div>
      </div>
    </section>
  </div>
</div>
<div class="sidenav-overlay"></div>
<div class="drag-target"></div>
<%- include('../common/footer') %>
    

  <!-- BEGIN: Content-->
  <div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
     
      <div class="content-body">
        <section id="multiple-column-form">
          <div class="row">
            <div class="col-md-12 col-12">
              <div class="card">
                <div class="card-header">
                  <h4 class="card-title">Edit Profile </h4>
                </div>
                <br>
                <div class="card-body">
                  <form class="form form-horizontal" action="/update_worker" method="POST" id="profile" enctype="multipart/form-data">
                    <div class="row">
                      <div class="col-4">
                        <div class="profile-widget-header text-center">
                          <img src="<%=editdata.image%>" alt="Image" class="img-thumbnail" name="profile_image" id="profile_image">
                          <input type="file" id="imgInp" name="image" />
                          <label for="imgInp" style="cursor: pointer;">
                            <i class="fe fe-24 camera_icon" data-feather='camera'></i>
                          </label>
                        </div>
                      </div>
                      <div class="col-8" style="margin-top: 17px;">
                        <div class="mb-1 row">
                          <div class="col-sm-2">
                            <label class="col-form-label new_lable" for="firstname">First Name</label>
                          </div>
                          <div class="col-sm-10">
                            <input type="text" id="firstname" class="form-control" name="firstname" value="<%=editdata.firstname%>" maxlength="60">
                            <input type="hidden" name="id" value="<%=editdata._id%>">
                          </div>
                        </div>
                        <div class="mb-1 row">
                          <div class="col-sm-2">
                            <label class="col-form-label new_lable" for="firstname">Last Name</label>
                          </div>
                          <div class="col-sm-10">
                            <input type="text" id="name" class="form-control" name="lastname" value=" <%=editdata.lastname%>" maxlength="60">
                          </div>
                        </div>
                       
                        <div class="mb-1 row">
                          <div class="col-sm-2">
                            <label class="col-form-label new_lable" for="email">Email</label>
                          </div>
                          <div class="col-sm-10">
                            <input type="email" id="email" class="form-control" name="email" value="<%=editdata.email%>" disabled>
                          </div>
                        </div>
                        <div class="mb-1 row">
                          <div class="col-sm-2">
                            <label class="col-form-label new_lable" for="mobile">Country Code</label>
                          </div>
                          <div class="col-sm-10">
                            <input type="number" id="country_code" class="form-control" name="country_code" value="<%=editdata.country_code%>" required>
                          </div>
                        </div>
                        <div class="mb-1 row">
                          <div class="col-sm-2">
                            <label class="col-form-label new_lable" for="mobile">Phone</label>
                          </div>
                          <div class="col-sm-10">
                            <input type="number" id="phone" class="form-control" name="phone" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" maxlength="12" value="<%=editdata.phone%>" required>
                          </div>
                        </div>
                        <div class="mb-1 row">
                          <div class="col-sm-2">
                          <label for="name">Job Type</label>
                        </div>
                        <div class="col-sm-10">
                            <select name="categoryId" id="" class="form-control">
                              <%category.forEach(function(data,i) { %>
                              <option value="<%=data.id%>"<%=data.id==editdata.categoryId ? 'selected' : '' %>> <%=data.name%></option>
                              <%})%>
                            </select>
                          </div>
                        </div>
                        <div class="mb-1 row justify-content-center">
                          <div class="col-sm-4 text-end">
                            <button type="submit" class="btn btn-primary waves-effect waves-float waves-light">Update</button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
  <div class="sidenav-overlay"></div>
  <div class="drag-target"></div>

  <%- include('../common/footer'); -%>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>
  $(document).ready(function() {

    jQuery.validator.addMethod("noSpace", function(value, element) {
      return value == '' || value.trim().length != 0;
    }, "No space please and don't leave it empty");

    $('#profile').validate({
      rules: {
        firstname: {
          required: true,
          noSpace: true,
          maxlength: 20
        },
        lastname: {
          required: true,
          noSpace: true,
          maxlength: 20
        },
        mobile: {
          required: true,
          noSpace: true,
          maxlength: 12
        },

        location: {
          required: true,
          noSpace: true,
          maxlength: 60
        }
      },

      errorElement: "div",
      errorClass: "jqval-error",
      errorPlacement: function(error, element) {
        error.insertAfter(element);
        error.slideDown(400);
        error.animate({
          opacity: 1
        }, {
          queue: false,
          duration: 700
        });
      },

      submitHandler: function(form) {
        var error = $(".assign_error_div").text();
        if (!error) {
          form.submit();
        }
      }
    });
  });
</script>

<script>
  $(window).on('load', function() {

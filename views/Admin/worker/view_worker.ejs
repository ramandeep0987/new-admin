          <section id="multiple-column-form">
            <div class="row">
              <div class="col-md-11 col-12 mx-auto">
                <div class="card">
                  <div class="card-header">
                    <h4 class="card-title">View Service Provider</h4>
                  </div>
                  <div class="card-body">
                    <form class="form form-horizontal">
                      <div class="row">
                        <div class="col-md-4">
                          <div class="profile-widget-header text-center">
                            <img src="<%=workerdata.image%> " class="img-thumbnail user_bigimg ms-md-0 mx-auto">
                          </div>
                        </div>
                        <div class="col-md-8" style="margin-top: 10px;">
                          <div class="mb-1 row">
                            <div class="col-sm-2">
                              <label class="col-form-label new_lable" for="first-name"> Name</label>
                            </div>
                            <div class="col-sm-10">
                              <input type="text" id="firstname" class="form-control" name="firstname" value="<%=workerdata.firstname%> "
                                disabled>
                            </div>
                          </div>                        
                          <div class="mb-1 row">
                            <div class="col-sm-2">
                              <label class="col-form-label new_lable" for="first-name">Email</label>
                            </div>
                            <div class="col-sm-10">
                              <input type="text" id="email" class="form-control" name="email"
                                value="<%=workerdata.email%>" disabled>
                            </div>
                          </div>
                          <div class="mb-1 row">
                            <div class="col-sm-2">
                              <label class="col-form-label new_lable" for="first-name">Phone</label>
                            </div>
                            <div class="col-sm-10">
                              <input type="text" id="phone" class="form-control" name="phone"
                                value="<%=workerdata.country_code%> <%=workerdata.phone%>" disabled>
                            </div>
                          </div>
                          <div class="mb-1 row">
                            <div class="col-sm-2">
                              <label class="col-form-label new_lable">Work Photos</label>
                            </div>
                            <div class="col-sm-10">
                              <div class="row ">
                                <% if (workerjobs?.work_photos && workerjobs?.work_photos?.length > 0) { %>
                                  <% for (img of workerjobs?.work_photos) { %>
                                      <div class="col-md-2 col-12 p-md-10">
                                          <img src="<%= img.url %>" class="vel_view" alt="" width="70px" height="60px" class="rounded-circle profile-widget-picture">
                                      </div>
                                  <% } %>
                              <% } else { %>
                                  <p>No work photos available</p>
                              <% } %>
                              
                              </div>
                            </div>
                          </div>
                         <div class="mb-1 row">
